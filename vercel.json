{
  "version": 2,
  "builds": [
    {
      "src": "/apps/client/dist/*",
      "use": "@now/static",
      "config": {
        "outputDirectory": "apps/client/dist"
      }
    },
    {
      "src": "/apps/api/index.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/apps/api/src/index.js",
      "methods": ["GET", "POST"]
    }
  ]
}
