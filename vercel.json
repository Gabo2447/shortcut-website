{
  "version": 2,
  "builds": [
    {
      "src": "apps/client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "outputDirectory": "apps/client/dist"
      }
    },
    {
      "src": "api/index.ts",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/.*\\.(js|css|ico|png|jpg|jpeg|gif|svg)$",
      "dest": "$0",
      "continue": true
    },
    {
      "src": "/[^/]+",
      "dest": "/api/index.ts"
    },
    {
      "src": "/shorten",
      "dest": "/api/index.ts"
    },
    {
      "src": "/(.*)",
      "dest": "/apps/client/dist/index.html"
    }
  ]
}
